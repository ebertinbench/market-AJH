{% extends 'base.html.twig' %}

{% block title %}Modifier l'utilisateur{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-8">
    <div class="bg-GREEN text-WHITE p-6 rounded-lg shadow-lg mb-8">
        <h1 class="text-3xl font-bold">Modifier l'utilisateur</h1>
    </div>

    {# Formulaire de gestion des rôles #}
    <div class="bg-WHITE p-6 rounded-lg shadow mb-6">
        <h2 class="text-2xl font-semibold mb-4">Modifier les rôles</h2>
        {{ form_start(roleForm) }}
            {{ form_row(roleForm.roles) }}
            <button type="submit" class="mt-4 bg-GREEN text-WHITE py-2 px-4 rounded hover:bg-PINK transition-colors">
                Mettre à jour les rôles
            </button>
        {{ form_end(roleForm) }}
    </div>

    {# Formulaire de changement de mot de passe #}
    <div class="bg-WHITE p-6 rounded-lg shadow mb-6">
        <h2 class="text-2xl font-semibold mb-4">Modifier le mot de passe</h2>
        {{ form_start(passwordForm) }}
            {{ form_row(passwordForm.plainPassword.first) }}
            {{ form_row(passwordForm.plainPassword.second) }}
            <button type="submit" class="mt-4 bg-GREEN text-WHITE py-2 px-4 rounded hover:bg-PINK transition-colors">
                Mettre à jour le mot de passe
            </button>
        {{ form_end(passwordForm) }}
    </div>

    <div class="flex space-x-4">
        <a href="{{ path('app_user_index') }}" class="bg-VIOLET text-WHITE py-2 px-4 rounded hover:bg-PINK transition-colors">
            Retour à la liste
        </a>
        {{ include('user/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}
