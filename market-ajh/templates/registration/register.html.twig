{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
<div class="flex-col flex justify-center items-center min-h-screen">
    <div class="w-full max-w-md p-8 bg-GREEN text-WHITE rounded-lg shadow-lg">
        <h1 class="text-3xl font-bold mb-6 text-center">Inscription</h1>

        {{ form_errors(registrationForm) }}

        {{ form_start(registrationForm, {'attr': {'class': 'space-y-6'}}) }}
            <div class="space-y-2">
                {{ form_row(registrationForm.username, {
                    'attr': {'class': 'w-full px-4 py-2 rounded text-BLACK bg-WHITE'},
                    'label_attr': {'class': 'block mb-1 font-medium'}
                }) }}
            </div>

            <div class="space-y-2">
                {{ form_row(registrationForm.plainPassword, {
                    'label': 'Mot de passe',
                    'attr': {'class': 'w-full px-4 py-2 rounded text-BLACK bg-WHITE'},
                    'label_attr': {'class': 'block mb-1 font-medium'}
                }) }}
            </div>

            <div class="flex items-center">
                {{ form_row(registrationForm.agreeTerms, {
                    'label': "J'accepte les conditions d'utilisation",
                    'label_attr': {'class': 'ml-2'}
                }) }}
            </div>

            <button type="submit" class="w-full bg-VIOLET text-WHITE py-2 px-4 rounded hover:bg-PINK transition-colors">
                S'inscrire
            </button>
        {{ form_end(registrationForm) }}

        <div class="mt-4 text-center">
            <a href="{{ path('app_login') }}" class="text-WHITE hover:text-PINK transition-colors">
                Déjà un compte ? Connectez-vous
            </a>
        </div>
    </div>
</div>
{% endblock %}