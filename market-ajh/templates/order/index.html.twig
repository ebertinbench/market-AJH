{% extends 'base.html.twig' %}

{% block title %}Toutes les commandes{% endblock %}

{% block body %}
    <div class="container mx-auto p-6 flex flex-col items-center">
        <h1 class="text-3xl font-bold mb-6 text-center">Commandes</h1>

        {# === Formulaire de filtres === #}
        <form method="get" class="mb-8 flex flex-wrap gap-4 items-end justify-center">
            <div class="w-60">
                <label for="player" class="block text-sm font-medium text-WHITE">Joueur</label>
                <select name="player" id="player"
                        class="mt-1 block w-full border-gray-300 rounded shadow-sm focus:ring focus:border-blue-300">
                    <option value="">Tous</option>
                    {% for player in players %}
                        <option value="{{ player.id }}"
                            {{ player.id == currentPlayer ? 'selected' }}>
                            {{ player.username }}
                        </option>
                    {% endfor %}
                </select>
            </div>

            <div class="w-60">
                <label for="status" class="block text-sm font-medium text-WHITE">Statut</label>
                <select name="status" id="status"
                        class="mt-1 block w-full border-gray-300 rounded shadow-sm focus:ring focus:border-blue-300">
                    <option value="">Tous</option>
                    {% for key, label in statuses %}
                        <option value="{{ key }}"
                            {{ key == currentStatus ? 'selected' }}>
                            {{ label }}
                        </option>
                    {% endfor %}
                </select>
            </div>

            <button type="submit"
                    class="px-4 py-2 bg-VIOLET text-white rounded shadow hover:bg-VIOLET">
                Filtrer
            </button>
        </form>

        {% if orders|length > 0 %}
            <div class="flex flex-wrap gap-6 justify-center">
                {% for order in orders %}
                    <div class="bg-GREEN shadow-lg rounded-lg p-5 mx-auto flex flex-col items-center">
                        <p class="text-WHITE"><strong>Commande n°{{ order.id }} <br>Emise par :</strong> {{ order.idClient.username }} </p>
                        <p class="text-WHITE text-sm mb-3">
                            <em>Le {{ order.dateCommande|date('d/m/Y') }} à {{ order.dateCommande|date('H:i') }}</em>
                        </p>
                        <p class="text-gray-800 mb-2">
                            <strong>Statut :</strong>
                            {{ statuses[order.statut] ?? order.statut }}
                        </p>
                        <img src="{{ asset(order.idItem.item.image) }}" alt="{{ order.idItem.item.nom }}" class="w-24 h-24 object-cover mt-3 mb-2 rounded">
                        <div class="text-gray-800 mb-2">
                            <strong>Article :</strong> {{ order.idItem.item.nom }}
                        </div>
                        <div class="text-gray-800 mb-2">
                            <strong>Quantité:</strong> {{ order.quantite }}
                        </div>
                        <div class="text-gray-800 mb-2">
                            <strong>Total :</strong> {{ order.total }} €
                        </div>
                        <div class="text-blue-900 font-semibold mb-2">
                            <strong>Vendeur :</strong> {{ order.idVendeur.username | default('Aucun vendeur assigné') }}
                        </div>
                        {% if order.idVendeur and order.statut != 'Avortée' and order.statut != 'Livrée'%}
                            <form method="post" action="{{ path('orders_remove_seller', {'id': order.id}) }}" class="mb-2">
                                <button type="submit" class="px-3 py-1 bg-VIOLET text-white rounded hover:bg-VIOLET text-xs">Me retirer de cette commande</button>
                            </form>
                            {% if order.idVendeur and order.idVendeur.id == app.user.id and order.statut != 'Avortée' and is_granted('ROLE_ADMIN') %}
                                <div>
                                    {# Bouton marquer comme avortée #}
                                    <form method="post" action="{{ path('orders_abort', {'id': order.id}) }}">
                                        <input type="hidden" name="_token" value="{{ csrf_token('abort' ~ order.id) }}">
                                        <button type="submit" class="px-2 py-1 bg-VIOLET text-white rounded hover:bg-VIOLET text-xs"
                                            {% if order.statut == 'Avortée' %}disabled class="opacity-50 cursor-not-allowed"{% endif %}>
                                            Marquer comme avortée
                                        </button>
                                    </form>
                                </div>
                            {% endif %}
                        {% else %}
                            {% if order.statut != 'Avortée' and order.statut != 'Livrée' %}
                            <form method="post" action="{{ path('orders_assign_seller', {'id': order.id}) }}" class="mb-2">
                                <input type="hidden" name="seller_id" value="{{ app.user.id }}">
                                <button type="submit" class="px-3 py-1 bg-VIOLET text-white rounded hover:bg-VIOLET text-xs">M'assigner cette commande</button>
                            </form>
                            {% endif %}
                        {% endif %}
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <p class="text-gray-500 text-center">Aucune commande trouvée pour ces critères.</p>
        {% endif %}
    </div>
{% endblock %}