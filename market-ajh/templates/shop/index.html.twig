{% block body %}
  <div class="container mx-auto p-4">
    <h1 class="text-2xl font-bold mb-4">Choisissez une guilde</h1>
    <ul class="list-disc pl-5">
      {% for guild in guilds %}
        <li class="mb-2">
          <a href="{{ path('shop_show', {id: guild.id}) }}"
             class="text-blue-600 hover:underline">
