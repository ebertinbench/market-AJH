{% extends 'base.html.twig' %}

{% block title %}Messagerie{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-8">
    <div class="max-w-6xl mx-auto">
        <div class="flex justify-between items-center mb-6">
            <h1 class="text-3xl font-bold text-gray-900">Messagerie</h1>
            <div class="space-x-2">
                <a href="{{ path('app_messages_new') }}" class="bg-VIOLET text-white font-bold py-2 px-4 rounded">
                    Nouveau message
                </a>
                <a href="{{ path('app_messages_users') }}" class="bg-VIOLET text-white font-bold py-2 px-4 rounded">
                    Voir tous les utilisateurs
                </a>
            </div>
        </div>

       

        {% if conversations|length > 0 %}
            <div class="bg-GREEN shadow-lg rounded-lg overflow-hidden">
                <div class="bg-gray-50 px-6 py-3 border-b">
                    <h2 class="text-lg font-semibold text-gray-900">Vos conversations</h2>
                </div>
                <div class="divide-y divide-gray-200">
                    {% for conversation in conversations %}
                        <div class="px-6 py-4 hover:bg-gray-50 transition-colors">
                            <a href="{{ path('app_messages_conversation', {userId: conversation.partner.id}) }}" class="block">
                                <div class="flex items-center justify-between">
                                    <div class="flex items-center space-x-3">
                                        <div class="flex-shrink-0">
                                            <div class="w-10 h-10 bg-blue-500 rounded-full flex items-center justify-center text-white font-bold">
                                                {{ conversation.partner.username|slice(0, 1)|upper }}
                                            </div>
                                        </div>
                                        <div class="flex-1 min-w-0">
                                            <p class="text-sm font-medium text-gray-900">
                                                {{ conversation.partner.username }}
                                                {% if conversation.partner.bestRole %}
                                                    <span class="text-xs text-gray-500">({{ conversation.partner.bestRole }})</span>
                                                {% endif %}
                                            </p>
                                            <p class="text-sm text-gray-500 truncate">
                                                {% if conversation.lastMessage.sender == current_user %}
                                                    Vous : {{ conversation.lastMessage.content|e|slice(0, 50) }}{% if conversation.lastMessage.content|length > 50 %}...{% endif %}
                                                {% else %}
                                                    {{ conversation.lastMessage.content|e|slice(0, 50) }}{% if conversation.lastMessage.content|length > 50 %}...{% endif %}
                                                {% endif %}
                                            </p>
                                        </div>
                                    </div>
                                    <div class="flex items-center space-x-2">
                                        {% if conversation.unreadCount > 0 %}
                                            <span class="bg-red-500 text-white text-xs font-bold px-2 py-1 rounded-full">
                                                {{ conversation.unreadCount }}
                                            </span>
                                        {% endif %}
                                        <span class="text-xs text-gray-400">
                                            {{ conversation.lastMessage.sentAt|date('d/m/Y H:i') }}
                                        </span>
                                    </div>
                                </div>
                            </a>
                        </div>
                    {% endfor %}
                </div>
            </div>
        {% else %}
            <div class="bg-GREEN shadow-lg rounded-lg p-8 text-center">
                <div class="mb-4">
                    <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
                    </svg>
                </div>
                <h3 class="text-lg text-WHITE mb-2">Aucune conversation</h3>
                <p class="text-WHITE mb-6">Vous n'avez pas encore de conversations. Commencez par envoyer un message !</p>
                <a href="{{ path('app_messages_new') }}" class="bg-VIOLET text-white font-bold py-2 px-4 rounded">
                    Envoyer votre premier message
                </a>
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}
