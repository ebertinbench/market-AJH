{% extends 'base.html.twig' %}

{% block title %}Nouveau message{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-8">
    <div class="max-w-2xl mx-auto">
        <div class="flex items-center mb-6">
            <a href="{{ path('app_messages_index') }}" class="mr-4 text-blue-500 hover:text-blue-700">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                </svg>
            </a>
            <h1 class="text-3xl font-bold text-gray-900">Nouveau message</h1>
        </div>

        {% for message in app.flashes('success') %}
            <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4">
                {{ message }}
            </div>
        {% endfor %}

        {% for message in app.flashes('error') %}
            <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
                {{ message }}
            </div>
        {% endfor %}

        <div class="bg-white shadow-lg rounded-lg overflow-hidden">
            <div class="bg-gray-50 px-6 py-3 border-b">
                <h2 class="text-lg font-semibold text-gray-900">Composer un message</h2>
            </div>
            <div class="p-6">
                {{ form_start(form, {'attr': {'class': 'space-y-4'}}) }}
                    <div>
                        {{ form_label(form.recipient, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                        {{ form_widget(form.recipient) }}
                        {{ form_errors(form.recipient) }}
                    </div>
                    
                    <div>
                        {{ form_label(form.content, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                        {{ form_widget(form.content) }}
                        {{ form_errors(form.content) }}
                    </div>
                    
                    <div class="flex justify-end space-x-2">
                        <a href="{{ path('app_messages_index') }}" class="bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded">
                            Annuler
                        </a>
                        {{ form_widget(form.submit) }}
                    </div>
                {{ form_end(form) }}
            </div>
        </div>

        {% if available_recipients|length > 0 %}
            <div class="mt-8 bg-white shadow-lg rounded-lg overflow-hidden">
                <div class="bg-gray-50 px-6 py-3 border-b">
                    <h3 class="text-lg font-semibold text-gray-900">Utilisateurs disponibles</h3>
                </div>
                <div class="p-6">
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-3">
                        {% for user in available_recipients %}
                            <div class="flex items-center justify-between p-3 border rounded-lg hover:bg-gray-50">
                                <div class="flex items-center space-x-3">
                                    <div class="w-8 h-8 bg-blue-500 rounded-full flex items-center justify-center text-white font-bold text-sm">
                                        {{ user.username|slice(0, 1)|upper }}
                                    </div>
                                    <div>
                                        <p class="font-medium text-gray-900">{{ user.username }}</p>
                                        {% if user.bestRole %}
                                            <p class="text-sm text-gray-500">{{ user.bestRole }}</p>
                                        {% endif %}
                                    </div>
                                </div>
                                <button type="button" onclick="selectRecipient('{{ user.username }}', {{ user.id }})" class="text-blue-500 hover:text-blue-700 text-sm">
                                    SÃ©lectionner
                                </button>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        {% endif %}
    </div>
</div>

<script>
function selectRecipient(username, userId) {
    const select = document.querySelector('#message_recipient');
    if (select) {
        select.value = userId;
        // Focus on content field
        document.querySelector('#message_content').focus();
    }
}
</script>
{% endblock %}
