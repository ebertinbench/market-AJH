{% extends 'base.html.twig' %}

{% block title %}Ajouter un item{% endblock %}

{% block body %}
  <div class="flex flex-col items-center min-h-screen text-black">
    <div class="w-full max-w-md p-8 mt-5 bg-GREEN rounded shadow">
      {{ form_start(form) }}
        <div class="mb-4">
          {{ form_row(form.item, {'attr': {'class': 'block w-full px-3 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-blue-500 bg-WHITE text-black'}}) }}
        </div>
        <div class="mb-4">
          {{ form_row(form.price, {'attr': {'class': 'block w-full px-3 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-blue-500 bg-WHITE text-black'}}) }}
        </div>
        <button class="w-full bg-VIOLET text-WHITE py-2 px-4 rounded ">Ajouter</button>
      {{ form_end(form) }}
    </div>
  </div>
{% endblock %}
